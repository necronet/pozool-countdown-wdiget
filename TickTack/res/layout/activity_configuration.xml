<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="true"
    tools:context=".ConfigurationActivity" >

    <fragment
        android:layout_margin="@dimen/panel_margin"
        android:id="@+id/fragmentConfiguration"
        android:name="com.pozool.widget.ticktack.ConfigurationFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <fragment
        android:layout_margin="0dp"
        android:id="@+id/fragmentPreview"
        android:name="com.pozool.widget.ticktack.PreviewFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>